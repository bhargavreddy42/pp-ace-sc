<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="?formDisabledBoxColor" />
            <corners android:radius="@dimen/default_space_4" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/colorTextError" />
            <corners android:radius="@dimen/default_space_4" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/ph_colorAccent" />
            <corners android:radius="@dimen/default_space_4" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/ph_colorAccent" />
            <corners android:radius="@dimen/default_space_4" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.0dip" android:color="?formDisabledBoxColor" />
            <corners android:radius="@dimen/default_space_4" />
        </shape>
    </item>
</selector>