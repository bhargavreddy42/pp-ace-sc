<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="?formBoxColor" />
            <corners android:radius="@dimen/box_corner_radius_big" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/colorTextError" />
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/box_corner_radius_big" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/pab_color" />
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/box_corner_radius_big" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <stroke android:width="2.0dip" android:color="@color/pab_color" />
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/box_corner_radius_big" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.0dip" android:color="?formDisabledBoxColor" />
            <solid android:color="@color/transparent" />
            <corners android:radius="@dimen/box_corner_radius_big" />
        </shape>
    </item>
</selector>