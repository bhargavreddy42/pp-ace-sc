<?xml version="1.0" encoding="utf-8"?>
<selector android:color="@color/cardClickedColor"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/cardClickedColor" />
            <corners android:bottomLeftRadius="@dimen/default_space_12" android:bottomRightRadius="@dimen/default_space_12" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/colorWhiteFillPrimary" />
            <corners android:bottomLeftRadius="@dimen/default_space_12" android:bottomRightRadius="@dimen/default_space_12" />
        </shape>
    </item>
</selector>